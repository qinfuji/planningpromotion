/* components/ticket/index.wxss */

.ticket {
  background-color: #fff;
  height: 170rpx;
  width: 100;
  display: flex;
  margin: 18rpx 22rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.28);
  border-right: 1rpx solid rgba(0, 0, 0, 0.28);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.28);
}

/**
  票据的锯齿状头
*/
.ticket_head {
  width: 10rpx;
  background-color: #c41061;
}

/**
  图片部分
*/
.ticket_image {
  width: 170rpx;
  height: 160rpx;
  margin: 5rpx;
  border-radius: 3rpx;
}

/**
  信息描述部分
*/
.ticket_info {
  flex-grow: 1;
  margin: 12rpx;
}
/**
  描述
 */
.ticket_descr {
  color: rgba(0, 0, 0, 0.69);
  font-size: 30rpx;
}

/**
  使用时间
*/
.ticker_time {
  color: rgba(0, 0, 0, 0.59);
  font-size: 26rpx;
}

/**
  撕票处样式
**/
.ticket_divier {
  width: 3rpx;
  border-left: 4rpx dashed rgba(0, 0, 0, 0.28);
}

/**
  使用状态区域
*/
.ticket_use_info {
  width: 170rpx;
  margin: 12rpx;
  color: rgba(0, 0, 0, 0.69);
  font-size: 30rpx;
}
